{
  "name": "bak-js",
  "module": "index.ts",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "lint": "cppcheck -i build -i imgui ./**/* --inconclusive --enable=warning 2>&1 >/dev/null | grep unin",
    "cmake": "cd build && cmake ..",
    "cmake:release": "cd build && cmake -DCMAKE_BUILD_TYPE=Release ..",
    "make": "cd build && make -j$(nproc)",
    // takes 1m55.524s to run
    "ninja": "./build.sh",
    "start": "cd build && ./main3d",
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "~5.6.3"
  }
}